{
  'extends': 'airbnb',
  'rules': {
    'max-len': [1, 120, 2, {ignoreComments: true}],
    'quote-props': [1, 'consistent-as-needed'],
    'no-cond-assign': [2, 'except-parens'],
    'radix': 0,
    'space-infix-ops': 0,
    'no-unused-vars': [1, {'vars': 'local', 'args': 'none', 'varsIgnorePattern': 'React'}],
    'no-underscore-dangle': ['error', {'allow': ['__REDUX_DEVTOOLS_EXTENSION__']}],
    'default-case': 0,
    'no-else-return': 0,
    'no-param-reassign': 0,
    'quotes': 0,
    'new-cap': [2, {
      'capIsNewExceptions': [
        'Immutable.Map',
        'Immutable.Set',
        'Immutable.List'
      ]
    }],
  }
}
